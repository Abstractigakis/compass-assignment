# Costco Web Scraper Makefile
# Provides convenient commands for running the # Analysis & Results
analyze:
	@echo "ğŸ“Š Analyzing extraction results..."
	python analyze_results.py

validate-categories:
	@echo "ğŸ” Validating category interface compliance..."
	python validate_categories.py

show-stats:r and tests

.PHONY: help setup install clean test test-all run run-full run-limited analyze deps check-env

# Default target
help:
	@echo "ğŸª Costco Web Scraper - Available Commands"
	@echo "=============================================="
	@echo ""
	@echo "ğŸš€ Setup & Installation:"
	@echo "  make setup         - Setup environment and install dependencies"
	@echo "  make install       - Install Python dependencies"
	@echo "  make check-env     - Check environment configuration"
	@echo "  make deps          - Check dependency status"
	@echo ""
	@echo "ğŸ¤– Running the Scraper:"
	@echo "  make run           - Run scraper with 10 categories (default)"
	@echo "  make run-limited   - Run scraper with 5 categories (quick test)"
	@echo "  make run-full      - Run scraper with ALL categories (âš ï¸  takes hours)"
	@echo "  make run-traditional - Run without AI (traditional extraction)"
	@echo ""
	@echo "ğŸ“Š Analysis & Results:"
	@echo "  make analyze       - Analyze extraction results"
	@echo "  make validate-categories - Validate category interface compliance"
	@echo "  make show-stats    - Show scraping statistics"
	@echo "  make show-products - Show sample extracted products"
	@echo ""
	@echo "ğŸ§ª Testing:"
	@echo "  make test          - Run comprehensive test suite for all components"
	@echo "  make test-all      - Run all component tests (same as test)"
	@echo "  make test-api      - Test REST API functionality"
	@echo "  make test-pagent   - Test PAgent (browser automation)"
	@echo "  make test-scraper  - Test web scraper functionality"
	@echo "  make test-database - Test database functionality"
	@echo "  make test-ai       - Test AI functionality (requires API key)"
	@echo ""
	@echo "ğŸ—„ï¸  Database & Service:"
	@echo "  make run-service   - Run scraping with database storage"
	@echo "  make init-db       - Initialize database with schema"
	@echo "  make db-stats      - Show database statistics"
	@echo "  make export-data   - Export latest session data"
	@echo "  make cleanup-db    - Clean up old database sessions"
	@echo ""
	@echo "ğŸŒ REST API:"
	@echo "  make run-api       - Start Flask API server"
	@echo "  make api-docs      - Open API documentation in browser"
	@echo "  make test-api      - Test API endpoints"
	@echo ""
	@echo "ğŸ§¹ Maintenance:"
	@echo "  make clean         - Clean temporary files and cache"
	@echo "  make clean-db      - Clean database files (extracted data)"
	@echo "  make clean-all     - Clean everything including venv"
	@echo ""

# Setup and installation
setup:
	@echo "ğŸ› ï¸  Setting up Costco Web Scraper..."
	python setup.py

install:
	@echo "ğŸ“¦ Installing dependencies..."
	pip install -r requirements.txt
	@echo "âœ… Dependencies installed"

check-env:
	@echo "ğŸ” Checking environment configuration..."
	@python -c "from dotenv import load_dotenv; import os; load_dotenv(); print('âœ… GEMINI_API_KEY configured' if os.getenv('GEMINI_API_KEY') and os.getenv('GEMINI_API_KEY') != 'your_gemini_api_key_here' else 'âŒ GEMINI_API_KEY not configured - check .env file')"

deps:
	@echo "ğŸ“‹ Checking dependencies..."
	@python -c "import sys; packages=['requests', 'bs4', 'playwright', 'dotenv', 'google.generativeai']; [print(f'âœ… {p}') if __import__(p) else print(f'âŒ {p}') for p in packages]" 2>/dev/null || echo "âŒ Some dependencies missing - run 'make install'"

# Running the scraper
run:
	@echo "ğŸš€ Running Costco Web Scraper (10 categories)..."
	python costco_web_scraper.py

run-limited:
	@echo "ğŸ§ª Running Costco Web Scraper (5 categories - quick test)..."
	@python -c "from costco_web_scraper import create_costco_scraper; scraper = create_costco_scraper(); result = scraper.scrape_all_categories_with_ai_extraction(max_categories=5); print(f'âœ… Completed: {result[\"successful_extractions\"]}/{result[\"categories_processed\"]} categories')"

run-full:
	@echo "âš ï¸  Running Costco Web Scraper with ALL categories (this may take hours)..."
	@echo "Press Ctrl+C to cancel within 5 seconds..."
	@sleep 5
	@python -c "from costco_web_scraper import create_costco_scraper; scraper = create_costco_scraper(); result = scraper.scrape_all_categories_with_ai_extraction(); print(f'ğŸ‰ Full scrape completed: {result[\"successful_extractions\"]}/{result[\"categories_processed\"]} categories')"

run-traditional:
	@echo "ğŸ”§ Running traditional scraper (without AI)..."
	@python -c "from costco_web_scraper import create_costco_scraper; scraper = create_costco_scraper(gemini_api_key=None); result = scraper.get_all_products_for_all_categories(max_categories=10); print(f'âœ… Traditional extraction: {result[\"total_products\"]} products found')"

# Analysis and results
analyze:
	@echo "ğŸ“Š Analyzing extraction results..."
	python analyze_results.py

show-stats:
	@echo "ğŸ“ˆ Scraper Statistics:"
	@python -c "from costco_web_scraper import create_costco_scraper; scraper = create_costco_scraper(); stats = scraper.get_stats(); print(f'ğŸ“‚ Total requests: {stats.get(\"total_requests\", 0)}'); print(f'ğŸ’¾ DB size: {stats.get(\"db_size_mb\", 0):.1f} MB'); print(f'ğŸ—‚ï¸  Request types: {stats.get(\"request_types\", {})}')"

show-products:
	@echo "ğŸ›’ Sample Products Found:"
	@python -c "import json; from pathlib import Path; [print(f'ğŸ“‹ {f.parent.name}: {len(json.load(open(f)))} products') for f in Path('db/page_requests').glob('*/products.json') if f.exists()][:5]" 2>/dev/null || echo "No products found yet - run scraper first"

# Testing
test:
	@echo "ğŸ§ª Running comprehensive test suite..."
	python tests/test_all.py

test-all:
	@echo "ğŸ§ª Running all component tests..."
	python tests/test_all.py

test-api:
	@echo "ğŸŒ Testing API functionality..."
	python tests/test_costco_api.py

test-pagent:
	@echo "ğŸŒ Testing PAgent functionality..."
	python tests/test_pagent.py

test-scraper:
	@echo "ğŸª Testing web scraper functionality..."
	python tests/test_costco_web_scraper.py

test-database:
	@echo "ğŸ—„ï¸  Testing database functionality..."
	python tests/test_costco_database.py

test-ai:
	@echo "ğŸ¤– Testing AI functionality..."
	@echo "âš ï¸  AI tests require GEMINI_API_KEY to be configured"
	python -c "from costco_web_scraper import create_costco_scraper; scraper = create_costco_scraper(); print('âœ… AI initialization successful' if scraper.gemini_api_key else 'âŒ No API key configured')"

test-is-leaf:
	@echo "ğŸƒ Testing leaf detection..."
	python tests/test_costco_web_scraper.py TestCostcoWebScraper.test_is_leaf_category_detection

# Maintenance and cleanup
clean:
	@echo "ğŸ§¹ Cleaning temporary files..."
	find . -name "*.pyc" -delete
	find . -name "__pycache__" -type d -exec rm -rf {} + 2>/dev/null || true
	find . -name ".pytest_cache" -type d -exec rm -rf {} + 2>/dev/null || true
	@echo "âœ… Cleaned temporary files"

clean-db:
	@echo "ğŸ—‘ï¸  Cleaning database files..."
	@echo "âš ï¸  This will delete all extracted data. Continue? (y/N)"
	@read -r confirm && [ "$$confirm" = "y" ] && rm -rf db/ && echo "âœ… Database cleaned" || echo "âŒ Cancelled"

clean-all: clean clean-db
	@echo "ğŸ—‘ï¸  Cleaning everything including virtual environment..."
	@echo "âš ï¸  This will delete venv and all data. Continue? (y/N)"
	@read -r confirm && [ "$$confirm" = "y" ] && rm -rf venv/ && echo "âœ… Full cleanup completed" || echo "âŒ Cancelled"

# Development shortcuts
dev-setup: install check-env
	@echo "ğŸ› ï¸  Development environment ready!"

quick-test: test-scraper analyze
	@echo "âœ… Quick test completed"

demo: run-limited analyze
	@echo "ğŸ¬ Demo completed - check results above!"

# Health check
health:
	@echo "ğŸ¥ System Health Check:"
	@echo "Environment: $$(python --version)"
	@echo "Dependencies:"
	@make deps
	@echo "API Key:"
	@make check-env
	@echo "Database:"
	@ls -la db/ 2>/dev/null && echo "âœ… Database exists" || echo "âŒ No database found"

# Database and Service operations
run-service:
	@echo "ğŸš€ Running Costco scraper with database storage..."
	python costco_service.py

run-service-limited:
	@echo "ğŸš€ Running limited Costco scraper with database storage..."
	python -c "from costco_service import CostcoService; s = CostcoService(); s.scrape_categories(categories_limit=5); s.end_scraping_session()"

init-db:
	@echo "ğŸ—„ï¸  Initializing Costco database..."
	python -c "from costco_database import CostcoDatabase; CostcoDatabase()"
	@echo "âœ… Database initialized"

db-stats:
	@echo "ğŸ“Š Database Statistics:"
	python -c "from costco_service import CostcoService; import json; s = CostcoService(); stats = s.get_database_stats(); print(json.dumps(stats, indent=2, default=str))"

export-data:
	@echo "ğŸ“ Exporting latest session data..."
	python -c "from costco_service import CostcoService; s = CostcoService(); sessions = s.db.get_recent_sessions(1); print('Latest session:', sessions[0]['session_id'] if sessions else 'No sessions found'); s.export_session_data(sessions[0]['session_id']) if sessions else None"

export-session:
	@echo "ğŸ“ Export specific session (usage: make export-session SESSION_ID=your_session_id)"
	@if [ -z "$(SESSION_ID)" ]; then echo "âŒ Please provide SESSION_ID parameter"; else python -c "from costco_service import CostcoService; s = CostcoService(); s.export_session_data('$(SESSION_ID)')"; fi

cleanup-db:
	@echo "ğŸ§¹ Cleaning up old database sessions (keeping last 30 days)..."
	python -c "from costco_service import CostcoService; s = CostcoService(); s.cleanup_old_data()"

test-database:
	@echo "ğŸ§ª Testing database functionality..."
	python -c "from costco_database import CostcoDatabase; from category_interface import CategoryItem, CategoryType; db = CostcoDatabase(); print('âœ… Database connection working'); session = db.start_scraping_session(metadata={'test': True}); cat = CategoryItem('Test Category', category_type=CategoryType.LEAF_PRODUCT); cat_id = db.save_category(session, cat); print(f'âœ… Category saved with ID: {cat_id}'); db.end_scraping_session(session); print('âœ… Database test completed')"

test-service:
	@echo "ğŸ§ª Testing Costco service..."
	python -c "from costco_service import CostcoService; s = CostcoService(); print('âœ… Service initialized'); stats = s.get_database_stats(); print(f'Database contains {stats[\"total_sessions\"]} sessions'); print('âœ… Service test completed')"

test-integration:
	@echo "ğŸ§ª Running complete integration test..."
	python test_integration.py

test-system: test-database test-service test-integration
	@echo "âœ… All system tests completed successfully!"

# REST API operations
run-api:
	@echo "ğŸŒ Starting Costco Database API server..."
	@echo "ğŸ“š Swagger docs will be available at: http://localhost:5000/docs/"
	@echo "ğŸ¥ Health check at: http://localhost:5000/health"
	python costco_api.py

run-api-background:
	@echo "ğŸŒ Starting API server in background..."
	python costco_api.py &
	@echo "API server started in background"

api-docs:
	@echo "ğŸ“š Opening API documentation..."
	@if command -v open >/dev/null 2>&1; then \
		open http://localhost:5001/docs/; \
	elif command -v xdg-open >/dev/null 2>&1; then \
		xdg-open http://localhost:5001/docs/; \
	else \
		echo "Please open http://localhost:5001/docs/ in your browser"; \
	fi

test-api:
	@echo "ğŸ§ª Testing API endpoints..."
	python test_api.py

api-health:
	@echo "ğŸ¥ Checking API health..."
	@curl -s http://localhost:5001/health | python -m json.tool || echo "âŒ API server not responding"

install-api:
	@echo "ğŸ“¦ Installing API dependencies..."
	pip install flask flask-restx werkzeug
	@echo "âœ… API dependencies installed"
